{
  "comment": "VibeCodeHPC yöneticileri için OpenTelemetry ayar şablonu",
  "comment2": "Bu dosyayı uygun konuma kopyalayıp kullanın:",
  "comment3": "macOS: /Library/Application Support/ClaudeCode/managed-settings.json",
  "comment4": "Linux: /etc/claude-code/managed-settings.json",
  "env": {
    "CLAUDE_CODE_ENABLE_TELEMETRY": "1",
    "OTEL_METRICS_EXPORTER": "otlp",
    "OTEL_LOGS_EXPORTER": "otlp",
    "OTEL_EXPORTER_OTLP_PROTOCOL": "grpc",
    "OTEL_EXPORTER_OTLP_ENDPOINT": "http://your-collector.example.com:4317",
    "OTEL_EXPORTER_OTLP_HEADERS": "Authorization=Bearer your-company-token",
    "OTEL_METRIC_EXPORT_INTERVAL": "60000",
    "OTEL_LOGS_EXPORT_INTERVAL": "5000",
    "OTEL_METRICS_INCLUDE_SESSION_ID": "true",
    "OTEL_METRICS_INCLUDE_VERSION": "false",
    "OTEL_METRICS_INCLUDE_ACCOUNT_UUID": "true",
    "OTEL_LOG_USER_PROMPTS": "0",
    "OTEL_RESOURCE_ATTRIBUTES": "department=engineering,project=vibecodehpc"
  }
}
