# VibeCodeHPC için OpenTelemetry Yapılandırması
# Bu dosya aracı başlatılırken yüklenir

# Temel ayar
export CLAUDE_CODE_ENABLE_TELEMETRY=1

# Exporter ayarları
export OTEL_METRICS_EXPORTER=otlp
export OTEL_LOGS_EXPORTER=otlp

# OTLP uç noktası (varsayılan; gerekirse değiştirin)
export OTEL_EXPORTER_OTLP_PROTOCOL=grpc
export OTEL_EXPORTER_OTLP_ENDPOINT=http://localhost:4317

# Kimlik doğrulama (gerektiğinde yorum satırını kaldırın)
# export OTEL_EXPORTER_OTLP_HEADERS="Authorization=Bearer your-token"

# Dışa aktarma aralıkları (üretim için varsayılan)
export OTEL_METRIC_EXPORT_INTERVAL=60000  # 60 sn
export OTEL_LOGS_EXPORT_INTERVAL=5000     # 5 sn

# Kardinalite kontrolü (aracı bazlı analiz için etkin)
export OTEL_METRICS_INCLUDE_SESSION_ID=true
export OTEL_METRICS_INCLUDE_VERSION=false
export OTEL_METRICS_INCLUDE_ACCOUNT_UUID=true

# Kullanıcı istemi loglama (varsayılan devre dışı)
export OTEL_LOG_USER_PROMPTS=0

# Hata ayıklama modu (yalnızca geliştirmede etkinleştirin)
# export OTEL_METRIC_EXPORT_INTERVAL=10000  # 10 sn
